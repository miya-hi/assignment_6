<div class="wrapper">
  <header class="header">
    <div class="logo">Twitter Clone</div>
    <div class="heading">ツイート 一覧</div>
  </header>
  <article>
    <p class="notice"><%= notice %></p>
    <table>
      <% @posts.each do |post| %>
      <tr>
        <td class="content"><%= post.content %></td>
        <td class="button"><%= link_to '編集', edit_post_path(post.id), data: { confirm: '編集しますか？' }  %></td>
        <td class="button"><%= link_to '削除', post_path(post.id), method: :delete,data: { confirm: '削除してよろしいですか？' } %></td>
      </tr>
      <% end %>
    </table>
    <br>
    <p class="move_button"><%= link_to '新しいツイートを投稿',new_post_path %></p>
  </article>
  <footer><p class="copyright">© 2021 TwitterClone</p></footer>
</div>
