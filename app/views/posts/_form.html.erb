<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |form| %>
<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= @post.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="post_content">
    <div class="now"><%= form.label :今なにしてる？ %></div>
    <div><%= form.text_field :content %></div>
  </div>
  <%= form.submit "投稿" %>
<% end %>
<p class="move_button"><%= link_to "ツイート一覧画面に戻る", posts_path %></p>
